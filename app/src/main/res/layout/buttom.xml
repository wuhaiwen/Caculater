<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="4"
    app:rowCount="4">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        app:layout_row="1"
        app:layout_column="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button10"
        app:layout_row="1"
        app:layout_column="1" />

    <Button
        android:id="@+id/button1"
        android:text="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="0"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
         />/>

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="0"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="0"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="0"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="1"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="1"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="1"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="7" />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="1"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="2"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="9" />
    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="2"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="0" />

    <Button
        android:id="@+id/button_muilt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="2"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="*" />

    <Button
        android:id="@+id/button_divide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="2"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="/" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="3"
        app:layout_column="0"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="."
        android:id="@+id/button_dian"
     />

    <Button
        android:id="@+id/button_minus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="3"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="-" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="3"
        app:layout_column="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="+" />

    <Button
        android:id="@+id/button_equal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="3"
        app:layout_column="3"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="=" />

    <Button
        android:id="@+id/button_clean"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_row="4"
        app:layout_column="0"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:text="清零"
        />

</android.support.v7.widget.GridLayout>